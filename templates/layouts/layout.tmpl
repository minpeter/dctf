{{define "header"}}

<header>
  <ul class="flex items-center justify-center flex-1 p-1 space-x-1 list-none    text-neutral-700 group ">

    {{range $val := .Header}}

    <li hx-boost="true">

      {{if eq $val.Title "Logout"}}

      <div hx-get="/components/modal" hx-target="body" hx-swap="beforeend"
        class="inline-flex items-center justify-center h-10 px-4 py-2 text-sm font-medium transition-colors rounded-md hover:text-neutral-900 focus:outline-none disabled:opacity-50 disabled:pointer-events-none bg-background hover:bg-neutral-100 group w-max cursor-pointer">
        {{$val.Title}}
      </div>

      {{else}}

      <a href={{$val.Url}}
        class="inline-flex items-center justify-center h-10 px-4 py-2 text-sm font-medium transition-colors rounded-md hover:text-neutral-900 focus:outline-none disabled:opacity-50 disabled:pointer-events-none bg-background hover:bg-neutral-100 group w-max">
        {{$val.Title}}
      </a>

      {{end}}


    </li>

    {{end}}

  </ul>

</header>

{{end}}