{
  "name": "telos",
  "version": "1.0.0",
  "repository": "https://github.com/minpeter/telos.git",
  "author": "Woonggi Min <minpeter@friendli.ai>",
  "license": "MIT",
  "scripts": {
    "dev:client": "sleep 1 && cd client && yarn dev",
    "dev:server": "air",
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "build:client": "cd client && yarn build",
    "build:server": "go build -o telos",
    "build": "yarn build:client && yarn build:server",
    "dep:client": "cd client && yarn",
    "dep:server": "go mod tidy",
    "dep": "yarn && yarn dep:client && yarn dep:server",
    "traefik": "podman compose -f infra-config/dev-compose.yml up -d "
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "scss": "^0.2.4"
  }
}